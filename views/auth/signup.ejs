<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:5rem;width:40vw;margin-bottom: 18rem;">
           
            <form class="validated-form" action="/register" method="POST" style="max-width:100%;margin:10px auto" novalidate>
                <%- include("../partials/flash")%>
                <h4 class="display-4">Sign Up</h4>
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" class="form-control" id="username" placeholder="Useraname" name="username" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                </div>
                <div class="mb-3">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="role" value="Retailer">
                    <label class="form-check-label" for="flexRadioDefault1">
                      Retailer
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="role" value="Consumer" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                      Consumer
                    </label>
                  </div>
                </div>
               
                <button type="submit" class="btn btn-success">Register</button>
              </form>
        
   
</div>


<%- include("../partials/footer")%>