<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:5rem;width:40vw;margin-bottom: 20rem;">
           
            <form class="validated-form" action="/login" method="POST" style="max-width:100%;margin:10px auto" novalidate>
                <%- include("../partials/flash")%>
                
                <h4 class="display-4">Login</h4>
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" class="form-control" id="username" placeholder="Useraname" name="username" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                </div>
               
                <button type="submit" class="btn btn-success">Login</button>
                  <br>
                  <br>
                <a href="/register">SignUp?</a>
                <a style="float: right;" href="/forgotpassword">Forgot Password</a>
              </form>
        
   
</div>


